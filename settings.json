{
    "workbench.colorTheme": "Monokai",
    "workbench.enableExperiments": false,
    "editor.fontSize": 14,
    "workbench.tree.indent": 13,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
    },
    "workbench.settings.editor": "json",
    "breadcrumbs.enabled": false,
    "editor.fontFamily": "Consolas",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.tabCompletion": "on",
    "editor.formatOnType": true,
    "editor.formatOnPaste": false,
    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",
    "editor.dragAndDrop": false,
    "editor.hover.enabled": false,
    "editor.minimap.renderCharacters": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "window.restoreWindows": "all",
    "window.menuBarVisibility": "toggle",
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.banner": "always",
    "files.hotExit": "off",
    "files.simpleDialog.enable": true,
    "files.insertFinalNewline": true,
    "debug.javascript.codelens.npmScripts": "never",
    "git.enabled": false,
    "git.ignoreMissingGitWarning": true,
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "telemetry.telemetryLevel": "off",
    "npm.fetchOnlinePackageInfo": false,
    "extensions.ignoreRecommendations": false,
    "csscomb.preset": "C:/Users/owner/.vscode/extensions/mrmlnc.vscode-csscomb-5.3.2/node_modules/csscomb/config/csscomb.json",
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.list.indentationSize": "inherit",

    "html.autoClosingTags": false,
    "htmltagwrap.tag": "strong",
    "htmltagwrap.autoDeselectClosingTag": false,

    "prettier.tabWidth": 2,
    "prettier.bracketSpacing": false,
    "prettier.printWidth": 777,
    "prettier.semi": true,

    "volar.codeLens.references": false,
    "volar.icon.splitEditors": false,
    "volar.preferredTagNameCase": "kebab",

    "python.showStartPage": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left",
    },
    "php.validate.executablePath": "C:\\php\\php.exe",
    "php.executablePath": "C:\\php\\php.exe",
    "php.validate.run": "onType",
    "phpserver.browser": "",
    "php-cs-fixer.executablePath": "${extensionPath}\\php-cs-fixer.phar",

    "[plaintext]": {
        "editor.quickSuggestions": false,
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        // "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[css]": {
        // "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[scss]": {
        "editor.tabSize": 2,
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue",
    ],
    "eslint.format.enable": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
    },
    "json.schemas": [],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": false,
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.formatOnType": true, //ESLintのautofixとは別で動く
        // "editor.formatOnSave": true, //ESLintのautofixとは別で動く
    },
    "[python]": {
        // "editor.formatOnType": true,
        // "editor.formatOnSave": true,
    },
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django",
    ],
    "python.pythonPath": "C:\\Users\\owner\\anaconda3\\python.exe",
    "[tf]": {
        "editor.tabSize": 2,
    },

    "settingsSync.ignoredSettings": [
        "editor.fontSize"
    ],
    "settingsSync.keybindingsPerPlatform": false,
}
