{
    "workbench.colorTheme": "Monokai",
    "workbench.enableExperiments": false,
    "workbench.tree.indent": 13,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.activityBar.visible": false,
    "breadcrumbs.enabled": false,
    "editor.fontSize": 14,
    "editor.fontFamily": "Consolas, 'Noto Sans JP'",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.tabCompletion": "on",
    "editor.formatOnType": true,
    "editor.formatOnPaste": false,
    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",
    "editor.dragAndDrop": false,
    "editor.hover.enabled": false,
    "editor.minimap.renderCharacters": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.unicodeHighlight.includeComments": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.accessibilitySupport": "off",
    "window.restoreWindows": "all",
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "maximized",
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "git.ignoreMissingGitWarning": true,
    // "search.useGlobalIgnoreFiles": true,
    // "search.useParentIgnoreFiles": true,
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.banner": "always",
    "files.hotExit": "off",
    "files.simpleDialog.enable": true,
    "files.insertFinalNewline": true,
    "debug.javascript.codelens.npmScripts": "never",
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "npm.fetchOnlinePackageInfo": false,
    "extensions.ignoreRecommendations": false,
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.list.indentationSize": "inherit",
    "settingsSync.ignoredSettings": [
        "editor.fontSize"
    ],
    "settingsSync.keybindingsPerPlatform": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },

    "html.autoClosingTags": false,
    "htmltagwrap.tag": "strong",
    "htmltagwrap.autoDeselectClosingTag": false,

    "stylelint.config": {
        "extends": [
            "stylelint-config-standard-scss",
            "stylelint-config-standard-vue",
        ],
        "rules": {
            "rule-empty-line-before": "never",
            "at-rule-empty-line-before": "never",
            "color-hex-length": "long",
            "color-function-notation": null,
            "alpha-value-notation": null,
            "selector-list-comma-newline-after": null,
            "max-line-length": null,
            "no-descending-specificity": null,
            "selector-class-pattern": null,
            "declaration-block-no-redundant-longhand-properties": null,
            "block-no-empty": null,
            "length-zero-no-unit": null,
            "declaration-colon-newline-after": "always-multi-line",
            "scss/double-slash-comment-empty-line-before": null,
            "at-rule-no-unknown": null,
            "declaration-empty-line-before": "never",
            "declaration-block-trailing-semicolon": null,
            "no-eol-whitespace": null,
            "number-max-precision": null,
        },
    },
    "stylelint.snippet": ["css", "scss", "vue"],
    "stylelint.validate": ["css", "scss", "vue"],
    "css.validate": false,
    "scss.validate": false,

    "eslint.validate": ["javascript", "javascriptreact", "vue"],
    "eslint.format.enable": true,

    "prettier.arrowParens": "always",
    "prettier.bracketSameLine": false,
    "prettier.bracketSpacing": true,
    "prettier.htmlWhitespaceSensitivity": "strict",
    "prettier.printWidth": 120,
    "prettier.quoteProps": "consistent",
    "prettier.semi": false,
    "prettier.singleAttributePerLine": false,
    "prettier.singleQuote": false,
    "prettier.tabWidth": 2,
    "prettier.trailingComma": "es5",
    "prettier.vueIndentScriptAndStyle": false,

    "volar.autoCompleteRefs": true,
    "volar.codeLens.references": false,
    "volar.completion.preferredAttrNameCase": "camel",
    "volar.completion.preferredTagNameCase": "pascal",
    "volar.inlayHints.eventArgumentInInlineHandlers": false,
    "volar.splitEditors.layout.left": ["template"],
    "volar.splitEditors.layout.right": ["style"],
    "volar.vueserver.fullCompletionList": true,

    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.stubPath": "./typings",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnusedImport": "none",
        "reportUnusedClass": "none",
        "reportUnusedFunction": "none",
        "reportUnboundVariable": "error",
        "reportUnknownMemberType": "none",
        "reportMissingModuleSource": "information",
        "reportMissingTypeStubs": "information",
        "reportInvalidStringEscapeSequence": "information",
        "reportTypedDictNotRequiredAccess":"warning",
        "reportUntypedFunctionDecorator": "none",
    },
    "python.formatting.provider": "none",
    "black-formatter.args": [
        "--line-length=124",
    ],
    "python.formatting.yapfArgs": [
        // https://github.com/google/yapf#knobs
        "--style={allow_multiline_dictionary_keys: false, allow_split_before_default_or_named_assigns: true, allow_split_before_dict_value: false, arithmetic_precedence_indication: true, based_on_style: google, blank_line_before_nested_class_or_def: false, blank_line_before_module_docstring: false, blank_line_before_class_docstring: false, coalesce_brackets: true, column_limit: 160, dedent_closing_brackets: true, each_dict_entry_on_separate_line: true, force_multiline_dict: true, indent_dictionary_value: true, spaces_around_default_or_named_assign: false, spaces_before_comment: 2, space_between_ending_comma_and_closing_bracket: true, split_arguments_when_comma_terminated: true, split_all_comma_separated_values: false, split_before_bitwise_operator: true, split_before_dict_set_generator: true, split_before_logical_operator: true}"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left",
    },

    "php.validate.run": "onType",
    "phpserver.browser": "",
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "intelephense.stubs": ["apache", "bcmath", "bz2", "calendar", "com_dotnet", "Core", "ctype", "curl", "date", "dba", "dom", "enchant", "exif", "FFI", "fileinfo", "filter", "fpm", "ftp", "gd", "gettext", "gmp", "hash", "iconv", "imap", "intl", "json", "ldap", "libxml", "mbstring", "meta", "mysqli", "oci8", "odbc", "openssl", "pcntl", "pcre", "PDO", "pdo_ibm", "pdo_mysql", "pdo_pgsql", "pdo_sqlite", "pgsql", "Phar", "posix", "pspell", "readline", "Reflection", "session", "shmop", "SimpleXML", "snmp", "soap", "sockets", "sodium", "SPL", "sqlite3", "standard", "superglobals", "sysvmsg", "sysvsem", "sysvshm", "tidy", "tokenizer", "xml", "xmlreader", "xmlrpc", "xmlwriter", "xsl", "Zend OPcache", "zip", "zlib", "wordpress"],

    "go.lintOnSave": "off",
    "go.formatTool": "gofmt",
    "go.editorContextMenuCommands": {
        "toggleTestFile": false,
        "addTags": false,
        "testAtCursor": false,
        "generateTestForFunction": false,
        "addImport": false,
        "testCoverage": false,
        "playground": false,
        "debugTestAtCursor": false
    },

    "rust-analyzer.lens.run.enable": false,
    "rust-analyzer.lens.debug.enable": false,
    "rust-analyzer.lens.implementations.enable": false,
    "rust-analyzer.rustfmt.extraArgs": [
        "--config", "blank_lines_upper_bound=999,imports_layout=HorizontalVertical,imports_granularity=Crate,group_imports=StdExternalCrate",
    ],

    "yaml.customTags": ["!And", "!And sequence", "!If", "!If sequence", "!Not", "!Not sequence", "!Equals", "!Equals sequence", "!Or", "!Or sequence", "!FindInMap", "!FindInMap sequence", "!Base64", "!Join", "!Join sequence", "!Cidr", "!Ref", "!Sub", "!Sub sequence", "!GetAtt", "!GetAZs", "!ImportValue", "!ImportValue sequence", "!Select", "!Select sequence", "!Split", "!Split sequence"],

    "cfnLint.validateUsingJsonSchema": true,

    "[plaintext]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
    },
    "[markdown]":  {
        "editor.tabSize": 4,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.suggest.showKeywords": false,
        "editor.suggest.showWords": false,
    },
    "[html]": {
        "editor.tabSize": 2,
    },
    "[css]": {
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        // "editor.formatOnSave": true,
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": false,
    },
    "[vue]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.prettier": true,
            "source.fixAll.stylelint": true,
        },
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[go]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false,
        },
    },
    "[rust]": {
        "editor.inlayHints.enabled": "offUnlessPressed",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[tf]": {
        "editor.tabSize": 2,
    },

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            // for only Vue
            {
                "scope": [
                    "entity.name.type.class",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },

            // for only Go
            {
                "scope": [
                    "keyword.const.go",
                    "keyword.function.go",
                    "keyword.type.go",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                },
            },
            {
                "scope": [
                    "storage.type.string.go",
                ],
                "settings": {
                    "foreground": "#fd971f",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "support.function.go",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                },
            },
            {
                "scope": [
                    "entity.name.type.go",
                ],
                "settings": {
                    "foreground": "#a6e22e",
                    "fontStyle": "",
                },
            },

            // for only Rust
            {
                "scope": [
                    "keyword.operator.key-value.rust",
                    "entity.name.type.rust",
                    "entity.name.type.struct.rust",
                    "entity.name.type.enum.rust",
                    "entity.name.type.result.rust",
                    "entity.name.function.rust",
                    "entity.name.namespace.rust",
                    "entity.name.type.trait.rust",
                    "meta.function.definition.rust keyword.operator.arrow.skinny.rust",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "keyword.other.fn.rust",
                    "entity.name.type.primitive.rust",
                    "entity.name.type.numeric.rust",
                    "meta.function.definition.rust entity.name.type.rust",
                    "meta.attribute.rust entity.name.type.rust",
                    "meta.use.rust entity.name.type.rust",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "meta.attribute.rust",
                    "meta.function.definition.rust variable.other.rust",
                    "punctuation.definition.lifetime.rust",
                    "entity.name.type.lifetime.rust",
                ],
                "settings": {
                    "foreground": "#fd971f",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "meta.function.definition.rust entity.name.function.rust",
                    "punctuation.definition.attribute.rust",
                ],
                "settings": {
                    "foreground": "#a6e22e",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "storage.type.rust",
                ],
                "settings": {
                    "foreground": "#f92672",
                },
            },
            {
                "scope": [
                    "entity.name.type.option.rust",
                ],
                "settings": {
                    "foreground": "#ae81ff",
                    "fontStyle": "italic",
                },
            },
        ],
    },
}
