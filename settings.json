{
    "workbench.colorTheme": "Monokai",
    "workbench.tree.indent": 13,
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.editor.empty.hint": "hidden",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.enablePreview": false,
    "editor.fontSize": 14,
    "editor.fontFamily": "Consolas, 'Noto Sans JP'",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",
    "editor.dragAndDrop": false,
    "editor.hover.enabled": false,
    "editor.minimap.renderCharacters": true,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.unicodeHighlight.includeComments": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.accessibilitySupport": "off",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.stickyScroll.enabled": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
  	"editor.codeActionsOnSave":{
        "source.fixAll.stylelint": "explicit",
        "source.organizeImports.biome": "explicit"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "files.simpleDialog.enable": true,
    "files.insertFinalNewline": true,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.defaultProfile.windows":"Ubuntu",
    "terminal.integrated.enableMultiLinePasteWarning":"never",
    "remote.autoForwardPortsSource": "hybrid",
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "git.blame.editorDecoration.enabled": false,
    "git.blame.statusBarItem.enabled": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "redhat.telemetry.enabled": false,
    "npm.fetchOnlinePackageInfo": false,
    "debug.javascript.codelens.npmScripts": "never",
    "extensions.ignoreRecommendations": false,
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "markdown.extension.print.absoluteImgPath": false,
    "markdown.extension.list.indentationSize": "inherit",
    "timing.hiddenCommands": [
        "timing.customToCustom",
        "timing.customToEpoch",
        "timing.customToIsoLocal",
        "timing.customToIsoUtc",
        "timing.epochToCustom",
        "timing.epochToCustomTimezone",
        "timing.epochToIsoTimezone",
        "timing.epochToGps",
        "timing.epochToIsoDuration",
        "timing.epochToReadableDuration",
        "timing.epochToReadableDuration",
        "timing.nowAsCustom",
        "timing.isoDurationToEpoch",
        "timing.isoRfcToCustom",
        "timing.toggleInsertConvertedTimeUserLevel",
    ],

    "github.copilot.enable": { "*": false },
    "github.copilot.chat.terminalChatLocation": "terminal",
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.codesearch.enabled": true,
    "chat.agent.enabled": true,
    "chatgpt.commentCodeLensEnabled": false,
	"roo-cline.allowedCommands": [
      "bu run tsc",
      "bun run lint",
      "bun run format",
      "bun run test",
      "bun test",
      "grep",
      "rg"
    ],
    "roo-cline.deniedCommands": [
      "bun run exec",
      "bun run script"
    ],
    "roo-cline.enableCodeActions": false,

    "html.autoClosingTags": true,
    "htmltagwrap.tag": "strong",
    "htmltagwrap.autoDeselectClosingTag": false,

    "javascript.preferences.importModuleSpecifier": "relative",
    "typescript.preferences.importModuleSpecifier": "relative",

    "biome.suggestInstallingGlobally": false,

    "stylelint.config": {
        "extends": [
            "stylelint-config-standard-scss",
            // "stylelint-config-standard-vue",
        ],
        "rules": {
            "rule-empty-line-before": "never",
            "at-rule-empty-line-before": "never",
            "color-hex-length": "long",
            "color-function-notation": null,
            "alpha-value-notation": null,
            "selector-list-comma-newline-after": null,
            "max-line-length": null,
            "no-descending-specificity": null,
            "selector-class-pattern": null,
            "declaration-block-no-redundant-longhand-properties": null,
            "block-no-empty": null,
            "length-zero-no-unit": null,
            "declaration-colon-newline-after": "always-multi-line",
            "scss/double-slash-comment-empty-line-before": null,
            "at-rule-no-unknown": null,
            "declaration-empty-line-before": "never",
            "declaration-block-trailing-semicolon": null,
            "no-eol-whitespace": null,
            "number-max-precision": null,
        },
    },
    "stylelint.snippet": ["css", "scss", "vue"],
    "stylelint.validate": ["css", "scss", "vue"],
    "css.validate": false,
    "scss.validate": false,

    "eslint.enable": false,
    "eslint.validate": ["javascript", "typescript", "vue"],
    "eslint.format.enable": true,
    "prettier.arrowParens": "always",
    "prettier.bracketSameLine": false,
    "prettier.bracketSpacing": true,
    "prettier.htmlWhitespaceSensitivity": "strict",
    "prettier.printWidth": 90,
    "prettier.quoteProps": "consistent",
    "prettier.semi": false,
    "prettier.singleAttributePerLine": false,
    "prettier.singleQuote": false,
    "prettier.tabWidth": 2,
    "prettier.trailingComma": "es5",
    "prettier.vueIndentScriptAndStyle": false,

    "vue.autoInsert.dotValue": true,
    "vue.editor.templateInterpolationDecorators": false,

    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.stubPath": "./typings",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnusedImport": "none",
        "reportUnusedClass": "none",
        "reportUnusedFunction": "none",
        "reportUnboundVariable": "error",
        "reportUnknownMemberType": "none",
        "reportMissingModuleSource": "information",
        "reportMissingTypeStubs": "information",
        "reportInvalidStringEscapeSequence": "information",
        "reportTypedDictNotRequiredAccess":"warning",
        "reportUntypedFunctionDecorator": "none",
    },
    "black-formatter.args": [
        "--line-length=124",
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left",
    },

    "php.validate.run": "onType",
    "intelephense.format.braces": "k&r",
    "intelephense.diagnostics.undefinedFunctions": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.stubs": ["apache", "bcmath", "bz2", "calendar", "com_dotnet", "Core", "ctype", "curl", "date", "dba", "dom", "enchant", "exif", "FFI", "fileinfo", "filter", "fpm", "ftp", "gd", "gettext", "gmp", "hash", "iconv", "imap", "intl", "json", "ldap", "libxml", "mbstring", "meta", "mysqli", "oci8", "odbc", "openssl", "pcntl", "pcre", "PDO", "pgsql", "Phar", "posix", "pspell", "readline", "Reflection", "session", "shmop", "SimpleXML", "snmp", "soap", "sockets", "sodium", "SPL", "sqlite3", "standard", "superglobals", "sysvmsg", "sysvsem", "sysvshm", "tidy", "tokenizer", "xml", "xmlreader", "xmlrpc", "xmlwriter", "xsl", "Zend OPcache", "zip", "zlib", "wordpress"],

    "rust-analyzer.lens.run.enable": false,
    "rust-analyzer.lens.debug.enable": false,
    "rust-analyzer.lens.implementations.enable": false,
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.rustfmt.extraArgs": [
        "--config", "imports_layout=HorizontalVertical,imports_granularity=Crate,group_imports=StdExternalCrate",
    ],

    "yaml.customTags": ["!And", "!And sequence", "!If", "!If sequence", "!Not", "!Not sequence", "!Equals", "!Equals sequence", "!Or", "!Or sequence", "!FindInMap", "!FindInMap sequence", "!Base64", "!Join", "!Join sequence", "!Cidr", "!Ref", "!Sub", "!Sub sequence", "!GetAtt", "!GetAZs", "!ImportValue", "!ImportValue sequence", "!Select", "!Select sequence", "!Split", "!Split sequence"],

    "cfnLint.validateUsingJsonSchema": true,

    "[plaintext]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
    },
    "[markdown]":  {
        "editor.tabSize": 4,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.suggest.showKeywords": false,
        "editor.suggest.showWords": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.formatOnSave": true,
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "stylelint.vscode-stylelint",
        "editor.formatOnSave": true,
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    "[jsonc]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": false,
    },
    "[yaml]": {
        "editor.tabSize": 2,
    },
    "[vue]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.prettier": "explicit",
            "source.fixAll.stylelint": "explicit"
        },
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[go]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never"
        },
    },
    "[rust]": {
        "editor.inlayHints.enabled": "offUnlessPressed",
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": false,
    },
    "[tf]": {
        "editor.tabSize": 2,
    },

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            // HTML
            {
                "scope": [
                    "meta.tag.custom.start.html entity.name.tag.html",
                    "meta.tag.custom.end.html entity.name.tag.html",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },

            // JS/TS, jsx/tsx
            {
                "scope": [
                    "entity.name.type",
                    "entity.name.type.interface",
                    "support.function.json.ts",
                    "support.function.json.tsx",
                ],
                "settings": {
                    "foreground": "#a6e22e",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "meta.type.annotation.ts entity.name.type.ts",
                    "meta.type.annotation.tsx entity.name.type.tsx",
                    "meta.type.parameters.ts entity.name.type.ts",
                    "meta.type.parameters.tsx entity.name.type.tsx",
                    "meta.return.type.ts entity.name.type.ts",
                    "meta.return.type.tsx entity.name.type.tsx",
                    "meta.return.type.arrow.ts entity.name.type.ts",
                    "meta.return.type.arrow.tsx entity.name.type.tsx",
                    "meta.class.ts entity.other.inherited-class.ts",
                    "meta.class.tsx entity.other.inherited-class.tsx",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "punctuation.accessor.ts",
                    "punctuation.accessor.tsx",
                    "punctuation.accessor.optional.ts",
                    "punctuation.accessor.optional.tsx",
                ],
                "settings": {
                    "foreground": "#f92672",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "new.expr.ts meta.function-call.ts entity.name.function.ts",
                    "new.expr.tsx meta.function-call.ts entity.name.function.tsx",
                    "meta.type.declaration.ts entity.name.type.alias.ts",
                    "meta.type.declaration.tsx entity.name.type.alias.tsx",
                    "meta.interface.ts entity.name.type.interface.ts",
                    "meta.interface.tsx entity.name.type.interface.tsx",
                    "variable.other.constant.ts entity.name.function.ts",
                    "variable.other.constant.tsx entity.name.function.tsx",
                    "entity.name.type.class.ts",
                    "entity.name.type.class.tsx",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "meta.arrow.ts storage.type.function.arrow.ts",
                    "meta.arrow.tsx storage.type.function.arrow.tsx",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                    "fontStyle": "italic",
                },
            },

            // Vue
            {
                "scope": [
                    "entity.name.type.class",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },

            // Go
            {
                "scope": [
                    "keyword.const.go",
                    "keyword.function.go",
                    "keyword.type.go",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                },
            },
            {
                "scope": [
                    "storage.type.string.go",
                ],
                "settings": {
                    "foreground": "#fd971f",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "support.function.go",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                },
            },
            {
                "scope": [
                    "entity.name.type.go",
                ],
                "settings": {
                    "foreground": "#a6e22e",
                    "fontStyle": "",
                },
            },

            // Rust
            {
                "scope": [
                    "keyword.operator.key-value.rust",
                    "entity.name.type.rust",
                    "entity.name.type.struct.rust",
                    "entity.name.type.enum.rust",
                    "entity.name.type.result.rust",
                    "entity.name.function.rust",
                    "entity.name.namespace.rust",
                    "entity.name.type.trait.rust",
                    "meta.function.definition.rust keyword.operator.arrow.skinny.rust",
                ],
                "settings": {
                    "foreground": "#f8f8f2",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "keyword.other.fn.rust",
                    "entity.name.type.primitive.rust",
                    "entity.name.type.numeric.rust",
                    "meta.function.definition.rust entity.name.type.rust",
                    "meta.attribute.rust entity.name.type.rust",
                    "meta.use.rust entity.name.type.rust",
                ],
                "settings": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "meta.attribute.rust",
                    "meta.function.definition.rust variable.other.rust",
                    "punctuation.definition.lifetime.rust",
                    "entity.name.type.lifetime.rust",
                ],
                "settings": {
                    "foreground": "#fd971f",
                    "fontStyle": "italic",
                },
            },
            {
                "scope": [
                    "meta.function.definition.rust entity.name.function.rust",
                    "punctuation.definition.attribute.rust",
                ],
                "settings": {
                    "foreground": "#a6e22e",
                    "fontStyle": "",
                },
            },
            {
                "scope": [
                    "storage.type.rust",
                ],
                "settings": {
                    "foreground": "#f92672",
                },
            },
            {
                "scope": [
                    "entity.name.type.option.rust",
                ],
                "settings": {
                    "foreground": "#ae81ff",
                    "fontStyle": "italic",
                },
            },
        ],
    },
}
